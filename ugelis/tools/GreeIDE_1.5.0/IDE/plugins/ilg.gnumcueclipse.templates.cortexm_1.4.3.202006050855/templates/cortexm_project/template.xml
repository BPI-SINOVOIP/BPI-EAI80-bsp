<?xml version="1.0" encoding="UTF-8"?>
<template
	type="ProjTempl"
	version="1.0"
	supplier="Eclipse.org"
	revision="1.0"
	author="Liviu Ionescu"
	copyright="Copyright (c) 2014 Liviu Ionescu. All rights reserved. This \
program and the accompanying materials are made available under the terms \
of the Eclipse Public License v1.0 which accompanies this distribution, \
and is available athttp://www.eclipse.org/legal/epl-v10.html"
	id="CM_Project"
	label="%CM.template.label"
	description="%CM.template.description"
	help="help.html">

	<property-group
		id="chip"
		label="%CM.group.target.label"
		description="%CM.group.target.description"
		type="PAGES-ONLY"
		help="help.html">

		<property
			id="CMcore"
			label="%CM.core.label"
			description="%CM.core.description"
			type="select"
			default="cortex-m4"
			hidden="false"
			persist="true">
			<item
				value="cortex-m0"
				label="Cortex-M0" />
			<item
				value="cortex-m0plus"
				label="Cortex-M0+" />
			<item
				value="cortex-m3"
				label="Cortex-M3" />
			<item
				value="cortex-m4"
				label="Cortex-M4" />
			<item
				value="cortex-m7"
				label="Cortex-M7" />
			<item
				value="cortex-m23"
				label="Cortex-M23" />
			<item
				value="cortex-m33"
				label="Cortex-M33" />
		</property>

		<property
			id="CMxtalValue"
			label="%CM.xtalValue.label"
			description="%CM.xtalValue.description"
			type="input"
			pattern="[0-9]*"
			default="%CM.xtalValue.default"
			hidden="false"
			persist="true" />

		<property
			id="CMflashSize"
			label="%CM.flashSize.label"
			description="%CM.flashSize.description"
			type="input"
			pattern="[0-9]*"
			default="%CM.flashSize.default"
			hidden="false"
			persist="true" />
		<property
			id="CMramSize"
			label="%CM.ramSize.label"
			description="%CM.ramSize.description"
			type="input"
			pattern="[0-9]*"
			default="%CM.ramSize.default"
			hidden="false"
			persist="true" />

		<property
			id="syscalls"
			label="%syscalls.label"
			description="%syscalls.description"
			type="select"
			default="none"
			hidden="false"
			persist="true">
			<item
				value="none"
				label="Freestanding (no POSIX system calls)" />
			<item
				value="retarget"
				label="POSIX (system calls implemented by application code)" />
			<item
				value="semihosting"
				label="Semihosting (POSIX system calls via host)" />
		</property>

		<property
			id="trace"
			label="%trace.label"
			description="%trace.description"
			type="select"
			default="DEBUG"
			hidden="false"
			persist="true">
			<item
				value="NONE"
				label="None (no trace output)" />
			<item
				value="ITM"
				label="ARM ITM (via SWO)" />
			<item
				value="STDOUT"
				label="Semihosting STDOUT stream" />
			<item
				value="DEBUG"
				label="Semihosting DEBUG channel" />
		</property>

		<property
			id="useSomeWarnings"
			label="%someWarnings.label"
			description="%someWarnings.description"
			type="boolean"
			default="true"
			hidden="false"
			persist="true" />

		<property
			id="useMostWarnings"
			label="%mostWarnings.label"
			description="%mostWarnings.description"
			type="boolean"
			default="false"
			hidden="false"
			persist="true" />

		<property
			id="useWerror"
			label="%useWerror.label"
			description="%useWerror.description"
			type="boolean"
			default="false"
			hidden="false"
			persist="true" />

		<property
			id="useOg"
			label="%useOg.label"
			description="%useOg.description"
			type="boolean"
			default="true"
			hidden="false"
			persist="true" />

		<property
			id="useNano"
			label="%useNano.label"
			description="%useNano.description"
			type="boolean"
			default="true"
			hidden="false"
			persist="true" />

		<property
			id="useLto"
			label="%useLto.label"
			description="%useLto.description"
			type="boolean"
			default="false"
			hidden="false"
			persist="true" />

	</property-group>

	<property-group
		id="folders"
		label="%group.folders.label"
		description="%group.folders.description"
		type="PAGES-ONLY"
		help="help.html">
		<property
			id="includeDir"
			label="%includeDir.label"
			description="%includeDir.description"
			type="input"
			default="%includeDir.default"
			pattern="[a-zA-Z0-9/]+"
			mandatory="true"
			persist="true" />
		<property
			id="sourceDir"
			label="%sourceDir.label"
			description="%sourceDir.description"
			type="input"
			default="%sourceDir.default"
			pattern="[a-zA-Z0-9/]+"
			mandatory="true"
			persist="true" />
		<property
			id="sysDir"
			label="%sysDir.label"
			description="%sysDir.description"
			type="input"
			default="%sysDir.default"
			pattern="[a-zA-Z0-9/]+"
			mandatory="true"
			persist="true" />
		<property
			id="cmsisDir"
			label="%cmsisDir.label"
			description="%cmsisDir.description"
			type="input"
			default="%cmsisDir.default"
			pattern="[a-zA-Z0-9/]+"
			mandatory="true"
			persist="true" />
		<property
			id="newlibDir"
			label="%newlibDir.label"
			description="%newlibDir.description"
			type="input"
			default="%newlibDir.default"
			pattern="[a-zA-Z0-9/]+"
			mandatory="true"
			persist="true" />
		<property
			id="ldscriptsDir"
			label="%ldscriptsDir.label"
			description="%ldscriptsDir.description"
			type="input"
			default="%ldscriptsDir.default"
			pattern="[a-zA-Z0-9/]+"
			mandatory="true"
			persist="true" />

		<property
			id="deviceName"
			label="%deviceName.label"
			description="%deviceName.description"
			type="input"
			default="%deviceName.default"
			pattern="[a-zA-Z0-9/]+"
			mandatory="true"
			persist="true" />

		<!-- ============================================================== -->
		<property
			id="fileExtension"
			label="Source file extension"
			description="Will be set to cpp for ccnature"
			mandatory="true"
			hidden="true"
			default="c"
			persist="false" />

		<property
			id="commonDir"
			label="common files"
			description="Will be set to ...templates.core/templates/common/ folder"
			mandatory="true"
			hidden="true"
			default="commonDir"
			persist="false" />

		<property
			id="CMSIS_name"
			label="CMSIS specific header name"
			description="Will be set to the vendor specific part of header names"
			mandatory="true"
			hidden="true"
			default="undefined"
			persist="false" />

		<property
			id="devicePeriph"
			label="Device periperal folder name"
			description="Will be set to the vendor specific part of header names"
			mandatory="true"
			hidden="true"
			default="undefined"
			persist="false" />

	</property-group>

	<!-- Note: the redundant 'condition="1==1"' is a workaround to control the 
		evaluation order. Without it, processes are evaluated after all ifs. -->

	<if condition="1==1">
		<process type="org.eclipse.cdt.managedbuilder.core.NewManagedProject">
			<simple
				name="name"
				value="$(projectName)" />
			<simple
				name="artifactExtension"
				value="elf" />
			<simple
				name="isCProject"
				value="true" />
		</process>
	</if>

	<if condition="1==1">
		<process type="ilg.gnumcueclipse.templates.core.SetPropertyIfHasNature">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="natureString"
				value="org.eclipse.cdt.core.ccnature" />
			<simple
				name="propertyName"
				value="fileExtension" />
			<simple
				name="propertyValue"
				value="cpp" />
		</process>

		<process type="org.eclipse.cdt.core.AddNature">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="natureId"
				value="org.eclipse.cdt.core.ccnature" />
		</process>

		<process
			type="ilg.gnumcueclipse.templates.core.SetPropertyToPluginResource">
			<simple
				name="pluginId"
				value="ilg.gnumcueclipse.templates.core" />
			<simple
				name="relativePath"
				value="templates/common" />
			<simple
				name="propertyName"
				value="commonDir" />
		</process>

		<process type="ilg.gnumcueclipse.templates.core.ConditionalSetProperty">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="condition"
				value="" />
			<simple
				name="propertyName"
				value="CMSIS_name" />
			<simple
				name="propertyValue"
				value="$(deviceName)" />
		</process>

		<process type="ilg.gnumcueclipse.templates.core.ConditionalSetProperty">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="condition"
				value="" />
			<simple
				name="propertyName"
				value="devicePeriph" />
			<simple
				name="propertyValue"
				value="$(deviceName)" />
		</process>
	</if>

	<!-- ================================================================== -->

	<!-- Create include header folders -->
	<!-- The order must be: -->
	<!-- include -->
	<!-- system/include -->
	<!-- system/include/cmsis -->
	<!-- system/include/$(devicePeriph) -->

	<if condition="1==1">
		<!-- include -->
		<process type="org.eclipse.cdt.core.CreateFolder">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="path"
				value="$(includeDir)" />
		</process>

		<!-- add to include paths -->
		<process
			type="org.eclipse.cdt.managedbuilder.core.AppendToMBSStringListOptionValues">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="resourcePaths">
				<element>
					<simple
						name="id"
						value="ilg.gnuarmeclipse.managedbuild.cross.option.*.include.paths" />
					<simple-array name="values">
						<element value="&quot;../$(includeDir)&quot;" />
					</simple-array>
					<simple
						name="path"
						value="" />
				</element>
			</complex-array>
		</process>
	</if>

	<if condition="1==1">
		<!-- system/include -->
		<!-- system/include/cmsis -->
		<process type="org.eclipse.cdt.core.CreateFolder">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="path"
				value="$(sysDir)/$(includeDir)/$(cmsisDir)" />
		</process>

		<!-- add to include paths -->
		<process
			type="org.eclipse.cdt.managedbuilder.core.AppendToMBSStringListOptionValues">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="resourcePaths">
				<element>
					<simple
						name="id"
						value="ilg.gnuarmeclipse.managedbuild.cross.option.*.include.paths" />
					<simple-array name="values">
						<element value="&quot;../$(sysDir)/$(includeDir)&quot;" />
					</simple-array>
					<simple
						name="path"
						value="" />
				</element>
				<element>
					<simple
						name="id"
						value="ilg.gnuarmeclipse.managedbuild.cross.option.*.include.paths" />
					<simple-array name="values">
						<element value="&quot;../$(sysDir)/$(includeDir)/$(cmsisDir)&quot;" />
					</simple-array>
					<simple
						name="path"
						value="" />
				</element>
			</complex-array>
		</process>
	</if>

	<if condition="1==1">
		<!-- system/include/$(devicePeriph) -->
		<process type="org.eclipse.cdt.core.CreateFolder">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="path"
				value="$(sysDir)/$(includeDir)/$(devicePeriph)" />
		</process>

		<!-- add to include paths -->
		<process
			type="org.eclipse.cdt.managedbuilder.core.AppendToMBSStringListOptionValues">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="resourcePaths">
				<element>
					<simple
						name="id"
						value="ilg.gnuarmeclipse.managedbuild.cross.option.*.include.paths" />
					<simple-array name="values">
						<element value="&quot;../$(sysDir)/$(includeDir)/$(devicePeriph)&quot;" />
					</simple-array>
					<simple
						name="path"
						value="" />
				</element>
			</complex-array>
		</process>
	</if>

	<!-- ================================================================== -->

	<!-- Create source folders -->
	<if condition="1==1">
		<!-- src -->
		<process type="org.eclipse.cdt.core.CreateSourceFolder">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="path"
				value="$(sourceDir)" />
		</process>
	</if>

	<if condition="1==1">
		<!-- system -->
		<process type="org.eclipse.cdt.core.CreateSourceFolder">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="path"
				value="$(sysDir)" />
		</process>
	</if>

	<!-- ================================================================== -->

	<!-- the main.[c|cpp] file -->
	<if condition="1==1">
		<process type="org.eclipse.cdt.core.AddFiles">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="src/main-10.c" />
					<simple
						name="target"
						value="$(sourceDir)/main.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>

		<process type="ilg.gnumcueclipse.templates.core.ConditionalAppendCreate">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="condition"
				value="" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="$(commonDir)/src/main/main-130-trace-via.c" />
					<simple
						name="target"
						value="$(sourceDir)/main.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>

		<process type="org.eclipse.cdt.core.AppendCreate">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="src/main-15.c" />
					<simple
						name="target"
						value="$(sourceDir)/main.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>

		<process type="ilg.gnumcueclipse.templates.core.ConditionalAppendCreate">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="condition"
				value="" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="$(commonDir)/src/main/main-180-$(syscalls)-hello.c" />
					<simple
						name="target"
						value="$(sourceDir)/main.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
				<element>
					<simple
						name="source"
						value="$(commonDir)/src/main/main-190-clock-blinky.c" />
					<simple
						name="target"
						value="$(sourceDir)/main.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>

		<process type="org.eclipse.cdt.core.AppendCreate">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="src/main-20-timer-init.$(fileExtension)" />
					<simple
						name="target"
						value="$(sourceDir)/main.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
				<element>
					<simple
						name="source"
						value="src/main-30-$(syscalls).c" />
					<simple
						name="target"
						value="$(sourceDir)/main.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
				<element>
					<simple
						name="source"
						value="src/main-40-timer-sleep.$(fileExtension)" />
					<simple
						name="target"
						value="$(sourceDir)/main.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
				<element>
					<simple
						name="source"
						value="src/main-50-$(syscalls).c" />
					<simple
						name="target"
						value="$(sourceDir)/main.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>
	</if>

	<if condition="1==1">
		<process type="ilg.gnumcueclipse.templates.core.AddAbsolutePathFiles">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="$(commonDir)/include/Timer-$(fileExtension).h" />
					<simple
						name="target"
						value="$(includeDir)/Timer.h" />
					<simple
						name="replaceable"
						value="true" />
				</element>
				<element>
					<simple
						name="source"
						value="$(commonDir)/src/Timer.$(fileExtension)" />
					<simple
						name="target"
						value="$(sourceDir)/Timer.$(fileExtension)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>
	</if>

	<!-- ================================================================== -->

	<!-- CMSIS files -->
	<if condition="1==1">
		<process type="ilg.gnumcueclipse.templates.core.ConditionalCopyFolders">
			<simple
				name="projectName"
				value="$(projectName)" />
			<simple
				name="condition"
				value="" />
			<complex-array name="folders">
				<element>
					<simple
						name="source"
						value="$(commonDir)/system/include/cmsis" />
					<simple
						name="target"
						value="$(sysDir)/$(includeDir)/$(cmsisDir)" />
					<simple
						name="pattern"
						value=".*[.](h|txt|md)" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>
	</if>

	<!-- ================================================================== -->

	<!-- Vendor CMSIS files -->
	<if condition="1==1">
		<!-- Vendor/DEVICE/include -->
		<process type="org.eclipse.cdt.core.AddFiles">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="Vendor/DEVICE/include/README_DEVICE.txt" />
					<simple
						name="target"
						value="$(sysDir)/$(includeDir)/$(cmsisDir)/README_DEVICE.txt" />
					<simple
						name="replaceable"
						value="true" />
				</element>
				<element>
					<simple
						name="source"
						value="Vendor/DEVICE/include/DEVICE.h" />
					<simple
						name="target"
						value="$(sysDir)/$(includeDir)/$(cmsisDir)/$(CMSIS_name).h" />
					<simple
						name="replaceable"
						value="true" />
				</element>
				<element>
					<simple
						name="source"
						value="Vendor/DEVICE/include/system_DEVICE.h" />
					<simple
						name="target"
						value="$(sysDir)/$(includeDir)/$(cmsisDir)/system_$(CMSIS_name).h" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>

		<process type="ilg.gnumcueclipse.templates.core.AddAbsolutePathFiles">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="include/cmsis_device.h" />
					<simple
						name="target"
						value="$(sysDir)/$(includeDir)/$(cmsisDir)/cmsis_device.h" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>

		<process type="org.eclipse.cdt.core.AddFiles">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="Vendor/DEVICE/src/README_DEVICE.txt" />
					<simple
						name="target"
						value="$(sysDir)/$(sourceDir)/$(cmsisDir)/README_DEVICE.txt" />
					<simple
						name="replaceable"
						value="true" />
				</element>
				<element>
					<simple
						name="source"
						value="Vendor/DEVICE/src/system_DEVICE.c" />
					<simple
						name="target"
						value="$(sysDir)/$(sourceDir)/$(cmsisDir)/system_$(CMSIS_name).c" />
					<simple
						name="replaceable"
						value="true" />
				</element>
				<element>
					<simple
						name="source"
						value="Vendor/DEVICE/src/vectors_DEVICE.c" />
					<simple
						name="target"
						value="$(sysDir)/$(sourceDir)/$(cmsisDir)/vectors_$(CMSIS_name).c" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
		</process>
	</if>

	<!-- ================================================================== -->

	<!-- System files -->
	<if condition="1==1">
		<process type="ilg.gnumcueclipse.templates.core.AddAbsolutePathFiles">
			<simple
				name="projectName"
				value="$(projectName)" />
			<complex-array name="files">
				<element>
					<simple
						name="source"
						value="$(commonDir)/system/include/arm/semihosting.h" />
					<simple
						name="target"
						value="$(sysDir)/$(includeDir)/arm/semihosting.h" />
					<simple
						name="replaceable"
						value="true" />
				</element>
			</complex-array>
